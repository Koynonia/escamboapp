<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">

	<title><%= t('app.name') %></title>

	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= stylesheet_link_tag    'site', media: 'all' %>
	<%= stylesheet_link_tag    'site/profile', media: 'all' %>

	<%= csrf_meta_tags %>

</head>

<body>
   <%= render :partial => "layouts/site_shared/navigation" %>

   <%#= render :partial => "layouts/site_shared/footer" %>

   <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
         <ul class="sidebar-nav">
            <li class="sidebar-brand">
               <%= link_to t('profile.home'), site_home_path %>
           </li>
           <li>
               <%= link_to t('profile.dashboard'), site_profile_dashboard_index_path %>
           </li>
           <li>
               <%= link_to t('profile.my_ads'), site_profile_ads_path %>
           </li>
           <li>
               <%= link_to t('profile.new_ad'), new_site_profile_ad_path %>
           </li>
       </ul>
   </div>
   <!-- /#sidebar-wrapper -->
   <!-- Page Content -->
   <div id="page-content-wrapper">
     <div class="container-fluid">
        <div class="row">
           <div class="col-lg-12">
              <%= yield %>
          </div>
      </div>
  </div>
</div>
<!-- /#page-content-wrapper -->
</div>
<!-- /#wrapper -->

<%= javascript_include_tag 'application' %>
<%= javascript_include_tag 'site' %>
<%= javascript_include_tag 'site/profile' %>
<%#= javascript_include_tag 'site/profile/ads' %>

<%= yield :javascripts %>

<%= render partial: 'layouts/shared/notifications' %>

</body>

</html>
