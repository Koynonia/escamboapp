<div class="container">    
	<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
		<div class="panel panel-info" >
			<div class="panel-heading">
				<div class="panel-title"><%= t('labels.login') %></div>
				<div style="float:right; font-size: 80%; position: relative; top:-25px"><%= render "members/shared/links" %></div>
			</div>     

			<div style="padding-top:30px" class="panel-body" >

				<div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

				<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('placeholder.email') %>                                     
				</div>

				<div style="margin-bottom: 25px" class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t('placeholder.password') %>
				</div>

				<div class="input-group">
					<div class="checkbox">
						<label>
							<% if devise_mapping.rememberable? -%>
							<%= f.check_box :remember_me %>
							<%= t('labels.remember_me') %>
							<% end -%>
						</label>
					</div>
				</div>

				<div style="margin-top:10px" class="form-group">
					<!-- Button -->

					<div class="col-sm-12 controls">
						<%= f.submit "#{t('buttons.login')}", class: "btn btn-success" %>
						<a id="btn-fblogin" href="#" class="btn btn-primary"><%= t('buttons.sign_in_with_facebook') %></a>

					</div>
				</div>

				<div class="form-group">
					<div class="col-md-12 control">
						<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
							<%= t('labels.dont_have_an_account') %> 
							<!--new_member_registration_path -->
							<a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show()">
								<%= t('labels.sign_up_here') %>
							</a>
						</div>
					</div>
				</div>    
				<% end %>   

			</div>                     
		</div>  
	</div>

	<!--Sign Up Box -->
	<div id="signupbox" style="display:none; margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div class="panel panel-info">
			<div class="panel-heading">
				<div class="panel-title"><%= t('labels.sign_up') %></div>
				<div style="float:right; font-size: 85%; position: relative; top:-10px">
					<a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()"><%= t('labels.login') %></a>
				</div>
			</div>  
			<div class="panel-body" >
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
				
				<!--Error Msg -->
				<% unless devise_error_messages!.blank? %>
				<div id="signupalert" class="alert alert-danger">
					<p><%= devise_error_messages! %></p>
					<span></span>
				</div>
				<% end %>

				<div class="form-group">
					<%= f.label :email, class: "col-md-3 control-label" %>
					<div class="col-md-9">
						<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('placeholder.email') %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :name, class: "col-md-3 control-label" %>
					<div class="col-md-9">
						<input type="text" class="form-control" name="firstname" placeholder="First Name">
					</div>
				</div>

				<div class="form-group">
					<%= f.label :password, class: "col-md-3 control-label" %>
					<div class="col-md-9">
						<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:  t('placeholder.password') %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, class: "col-md-3 control-label" %>
					<div class="col-md-9">
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t('placeholder.password') %>
					</div>
				</div>

				<div class="form-group">
					<!-- Button -->                                        
					<div class="col-md-offset-3 col-md-9">
						<%= f.submit "Sign up", class: "btn btn-info" do %>
						<i class="icon-hand-right"></i> &nbsp <%= t('buttons.sign_up') %>
						<% end %>
						<span style="margin-left:8px; margin-right:8px;"><%= t('labels.or') %></span>  
						<button id="btn-fbsignup" type="button" class="btn btn-primary"><i class="icon-facebook"></i> Â  <%= t('buttons.sign_up_with_facebook') %></button>
					</div>
				</div>
				<% end %>
				
			</div>
		</div>
	</div> 
</div>
