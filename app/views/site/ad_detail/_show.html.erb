<div class="card mt-4">
	<%= image_tag @ad.picture.url(:large), class: "card-img-top img-fluid", alt: "#{@ad.title}" %>
	
	<div class="card-body">
		<h3 align="right"><%= humanized_money_with_symbol @ad.price %></h3>
		<h3 class="card-title" style="padding-top: 10px;"><%= @ad.title %></h3>
		<span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
		4.0 stars
		<p class="card-text" style="padding-top: 30px;"><%= @ad.description.html_safe %></p>
	</div>
</div>
<!-- /.card -->

<div class="card card-outline-secondary my-4" style="padding-top: 50px;">
	<div class="card-header">
		<!-- Button trigger modal -->
		<% if member_signed_in? %>
			<button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#commentModal">
				<%= t('buttons.comment_leave') %>
			</button>
		<% else %>
			<button type="button" class="btn btn-success pull-right" disabled="disabled" data-toggle="modal" data-target="#commentModal">
				<%= t('buttons.comment_login') %>
			</button>
		<% end %>
		<h4 style="padding-bottom: 35px;"><%= t('labels.reviews') %></h4>
	</div>
	<!-- /.comments -->
	<%= render partial: 'site/ad_detail/comments' %>

</div>

<%= render partial: 'site/ad_detail/comment_modal' %>
