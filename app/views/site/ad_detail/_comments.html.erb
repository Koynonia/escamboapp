<% @ad.comments.each do |comment| %>

<div class="card-body">
	<% if comment.member.id == current_member.id %>
		<%= rating_for_user @ad, current_member, 'quality' %>
	<% end %>
	<p><%= comment.body %></p>
	<small class="text-muted">
		<%= t('labels.posted_by') %>
		<%= comment.member.email %>
		<%= t('labels.posted_on') %>
		<%= l comment.created_at %>

	</small>
	<hr>
</div>

<% end %>
