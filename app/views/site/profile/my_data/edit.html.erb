<%= content_for :javascripts do %>
<%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<h1><%= "#{t('messages.editing', model: @profile_member.model_name.human)}" %></h1>

<% if @profile_member.errors.any? %>
<div class="alert alert-danger alert-dismissable">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	<ul>
		<% @profile_member.errors.full_messages.each do |messages| %>
		<li><%= messages %></li>
		<% end %>
	</ul>
</div>
<% end %>
<br />

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>

<div class="container">
	<div class="row">

		<!-- /.left -->
		<div class="col-xs-3">
			<div class="form-group" align="center">
				<%= f.label :picture %><br>
				<%= image_tag("profile-picture.png", {:style => "width:150px;"}) %>
				<br><br>
				<label class="btn btn-default"><%= t('profile.add_image') %>
					<span style="display:none;">
						<%= f.file_field :picture, class: "btn" %>
					</span>
				</label>

			</div>
		</div>

		<!-- /.right -->
		<div class="col-xs-9">
			<div class="row">
				<div class="col-xs-6">
					<div class="form-group">
						<%= f.label :first_name %>
						<%= f.text_field :first_name, class: "form-control", placeholder: t('placeholder.first_name') %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-6">
					<div class="form-group">
						<%= f.label :second_name %>
						<%= f.text_field :second_name, class: "form-control", placeholder: t('placeholder.second_name') %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-3">
					<div class="form-group">
						<%= f.label :birthdate %>
						<%#= f.date_field :birthdate, class: "form-control" %>
						<%= f.text_field :birthdate, class: "form-control datepicker", value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-9">
					<br>
					<%= submit_tag t('buttons.save'), class: "btn btn-primary" %>
				</div>
			</div>

		</div>
	</div>
</div>

<% end %>
