<h1><%= t('profile.my_ads') %></h1>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th><%= @ads.model.human_attribute_name("id") %></th>
			<th><%= @ads.model.human_attribute_name("image") %></th>
			<th><%= @ads.model.human_attribute_name("description") %></th>
			<th><%= @ads.model.human_attribute_name("price") %></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @ads.each do |ad| %>
		<tr>
			<th scope="row"><%= ad.id %></th>
			<td><%= image_tag ad.picture(:thumb) %></td>
			<td align='justify'><%= ad.description_short %></td>
			<td style="padding-top: 2%;">
				<b><%= humanized_money_with_symbol ad.price %></b>
			</td>
			<td style="padding-top: 2%;">
				<%= link_to edit_site_profile_ad_path(ad), class: "btn btn-primary btn-sm" do %>
					<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
