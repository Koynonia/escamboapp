$(function(){
	let $sendMailModal = $('#sendMailModal');

	// Setting name and email on Form
	$('h4.modal-title').text('<%= t('labels.send_message_to', name: @admin.name) %>');
	$('#recipient-email').val('<%= @admin.email %>');

	// Shows Modal
	$sendMailModal.modal();

	// Set focus on 'Message Text' after modal is shown
	$sendMailModal.on('shown.bs.modal', function(){
		$('#subject-text').focus();
	});

