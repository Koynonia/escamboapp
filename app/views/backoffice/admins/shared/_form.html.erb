<!-- Page Content -->
<h1 class="page-header"><%= @admin.model_name.human(count: 2) %></h1>

<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
	<ul>
		<% @admin.errors.full_messages.each do |messages| %>
		<li><%= messages %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="panel panel-default">
	<div class="panel-heading">
		<%= action %>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="col-lg-6">
			<%= form_for([:backoffice, @admin]) do |f| %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:"form-control", placeholder:"#{t('placeholder.name')}" %>
			</div>
			<div class="form-group">
				<%= f.label :email %>
				<%= f.text_field :email, class:"form-control", placeholder:"#{t('placeholder.email')}" %>
			</div>
			<% if policy(@admin).edit? %>
			<div class="form-group">
				<%= f.label :role %>
				<%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
				<div class="radio">
					<%= b.label { b.radio_button + b.text } %>
				</div>
				<% end %>
			</div>
			<% end %>
			<div class="form-group">
				<%= f.label :password %>
				<%= f.text_field :password, type:"password", class:"form-control", placeholder:"#{t('placeholder.password')}" %>
			</div>
			<div class="form-group">
				<%= f.label :password_confirmation %>
				<%= f.text_field :password_confirmation, type:"password", class:"form-control", placeholder:"#{t('placeholder.password_confirm')}" %>
			</div>
			<button type="submit" class="btn btn-default"><%= t('buttons.save') %></button>
			<% end %>
		</div>
	</div>
	<!-- /.panel-body -->
</div>
