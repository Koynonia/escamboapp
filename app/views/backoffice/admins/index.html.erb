<h1 class="page-header"><%= @admin.model_name.human(count: 2) %></h1>

<div class="panel panel-default">
	<div class="panel-heading">
		<%= t('messages.listing', model: @admin.model_name.human(count: 2)) %>
		<% if policy(@admin).new? %>
			<%= link_to new_backoffice_admin_path, 
			class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
			<i class="fa fa-plus"></i>
			<% end %>
		<% end %>
	</div>

	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Nome</th>
						<th>Email</th>
						<th>Tipo de Acesso</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @admin.each do |admin| %>
					<tr>
						<td><%= admin.id %></td>
						<td><%= admin.name %></td>
						<td><%= admin.email %></td>
						<td><%= admin.role_i18n %></td>
						<td style="width: 100px">
							<%= link_to edit_backoffice_admin_path(admin), class:"btn btn-primary btn-circle pull-left" do %>
							<i class="fa fa-pencil"></i>
							<% end %>
							<% if current_admin.id != admin.id %>
									<%= link_to backoffice_admin_path(admin), 
									method: :delete, class:"btn btn-danger btn-circle pull-right", 
									data: {confirm: t('messages.confirm_with', item: admin.name)} do %>
									<i class="fa fa-minus"></i>
									<% end %>
							<% else %>
									<%= link_to '#', 
									disabled:"disabled", class:"btn btn-danger btn-circle pull-right" do %>
									<i class="fa fa-minus"></i>
									<% end %>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<!-- /.table-responsive -->
	</div>
	<!-- /.panel-body -->
</div>
